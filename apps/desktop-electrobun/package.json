{
  "name": "@guerillaglass/desktop-electrobun",
  "version": "0.1.0",
  "description": "Guerillaglass desktop shell built with Electrobun + React + Tailwind",
  "scripts": {
    "dev": "bun run build && electrobun dev",
    "dev:open": "bun run build && open build/dev-macos-arm64/Guerillaglass-dev.app",
    "dev:hmr": "concurrently \"bun run hmr\" \"bun run dev\"",
    "hmr": "vite --port 5173",
    "build": "vite build && electrobun build",
    "build:prod": "vite build && electrobun build --channel prod",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:ui": "playwright test -c playwright.config.ts",
    "test:ui:headed": "playwright test -c playwright.config.ts --headed",
    "test:ui:install": "playwright install chromium",
    "start": "bun run dev"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@guerillaglass/engine-protocol": "workspace:*",
    "@guerillaglass/localization": "workspace:*",
    "@tailwindcss/vite": "^4.2.0",
    "@tanstack/react-form": "^1.28.3",
    "@tanstack/react-hotkeys": "^0.3.0",
    "@tanstack/react-pacer": "^0.20.0",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.161.3",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "electrobun": "1.13.1",
    "lucide-react": "^0.575.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.4",
    "react-resizable-panels": "^4.6.4",
    "shadcn": "^3.8.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bun": "latest",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
